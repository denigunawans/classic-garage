<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ClassicGarage" parent="Theme.Material3.Light">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:windowBackground">@color/grey</item>
        <item name="colorPrimary">@color/night_blue</item>
        <item name="colorOnPrimary">@color/grey</item>
        <item name="android:textColorPrimary">@color/night_blue</item>

        <item name="colorSecondary">@color/pastel</item>
        <item name="colorOnSecondary">@color/night_blue</item>
    </style>
    
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground"> @color/night_blue</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/loggo</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.ClassicGarage</item>
    </style>

    <style name="Theme.ClassicGarage" parent="Base.Theme.ClassicGarage" />
    
    <style name="TextShortDetail">
        <item name="android:layout_width"> 0dp</item>
        <item name="android:layout_height"> wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="TextTitle">
        <item name="android:layout_width"> 0dp</item>
        <item name="android:layout_height"> wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="TextContent">
        <item name="android:layout_width"> 0dp</item>
        <item name="android:layout_height"> wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginStart">4dp</item>
    </style>
</resources>